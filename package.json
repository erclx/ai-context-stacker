{
  "name": "ai-context-stacker",
  "displayName": "AI Context Stacker",
  "description": "A VS Code extension that acts as a staging area for AI prompts.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiContextStacker",
          "title": "AI Context Stacker",
          "icon": "$(list-tree)"
        }
      ]
    },
    "views": {
      "aiContextStacker": [
        {
          "id": "aiContextTracksView",
          "name": "Context Tracks"
        },
        {
          "id": "aiContextStackerView",
          "name": "Staged Files"
        }
      ]
    },
    "commands": [
      {
        "command": "aiContextStacker.addCurrentFile",
        "title": "Add Current File",
        "category": "AI Context Stacker"
      },
      {
        "command": "aiContextStacker.addFileToStack",
        "title": "Add to AI Context Stack",
        "category": "AI Context Stacker"
      },
      {
        "command": "aiContextStacker.addFilePicker",
        "title": "Add Files",
        "category": "AI Context Stacker",
        "icon": "$(add)"
      },
      {
        "command": "aiContextStacker.addOpenFiles",
        "title": "Add All Open Files",
        "category": "AI Context Stacker",
        "icon": "$(editor-layout)"
      },
      {
        "command": "aiContextStacker.removeFile",
        "title": "Remove from Stack",
        "category": "AI Context Stacker",
        "icon": "$(close)"
      },
      {
        "command": "aiContextStacker.clearAll",
        "title": "Clear Stack",
        "category": "AI Context Stacker",
        "icon": "$(clear-all)"
      },
      {
        "command": "aiContextStacker.copyAll",
        "title": "Copy Stack",
        "category": "AI Context Stacker",
        "icon": "$(copy)"
      },
      {
        "command": "aiContextStacker.copyFile",
        "title": "Copy File Content",
        "category": "AI Context Stacker",
        "icon": "$(copy)"
      },
      {
        "command": "aiContextStacker.newTrack",
        "title": "New Track...",
        "category": "AI Context Stacker",
        "icon": "$(add)"
      },
      {
        "command": "aiContextStacker.switchTrack",
        "title": "Switch Track",
        "category": "AI Context Stacker",
        "icon": "$(list-flat)"
      },
      {
        "command": "aiContextStacker.renameTrack",
        "title": "Rename Track",
        "category": "AI Context Stacker",
        "icon": "$(edit)"
      },
      {
        "command": "aiContextStacker.deleteTrack",
        "title": "Delete Track",
        "category": "AI Context Stacker",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "aiContextStacker.addFileToStack",
          "when": "resourceScheme == file",
          "group": "7_modification"
        }
      ],
      "editor/title/context": [
        {
          "command": "aiContextStacker.addFileToStack",
          "when": "resourceScheme == file",
          "group": "1_cutcopypaste"
        }
      ],
      "view/title": [
        {
          "//": "--- Context Tracks: Title ---",
          "command": "aiContextStacker.newTrack",
          "when": "view == aiContextTracksView",
          "group": "navigation"
        },
        {
          "//": "--- Staged Files: Title (Visible Icons) ---",
          "command": "aiContextStacker.addFilePicker",
          "when": "view == aiContextStackerView",
          "group": "navigation@1"
        },
        {
          "command": "aiContextStacker.copyAll",
          "when": "view == aiContextStackerView",
          "group": "navigation@2"
        },
        {
          "command": "aiContextStacker.clearAll",
          "when": "view == aiContextStackerView",
          "group": "navigation@3"
        },
        {
          "//": "--- Staged Files: Title (Overflow '...') ---",
          "command": "aiContextStacker.addOpenFiles",
          "when": "view == aiContextStackerView"
        }
      ],
      "view/item/context": [
        {
          "//": "--- Tracks: HOVER ICONS ---",
          "command": "aiContextStacker.renameTrack",
          "when": "view == aiContextTracksView",
          "group": "inline"
        },
        {
          "command": "aiContextStacker.deleteTrack",
          "when": "view == aiContextTracksView",
          "group": "inline"
        },
        {
          "//": "--- Tracks: RIGHT CLICK MENU ---",
          "command": "aiContextStacker.switchTrack",
          "when": "view == aiContextTracksView",
          "group": "1_modification"
        },
        {
          "command": "aiContextStacker.renameTrack",
          "when": "view == aiContextTracksView",
          "group": "1_modification"
        },
        {
          "command": "aiContextStacker.deleteTrack",
          "when": "view == aiContextTracksView",
          "group": "2_modification"
        },
        {
          "//": "--- Files: HOVER ICONS ---",
          "command": "aiContextStacker.copyFile",
          "when": "view == aiContextStackerView && viewItem == stagedFile",
          "group": "inline@1"
        },
        {
          "command": "aiContextStacker.removeFile",
          "when": "view == aiContextStackerView && viewItem == stagedFile",
          "group": "inline@2"
        },
        {
          "//": "--- Files: RIGHT CLICK MENU ---",
          "command": "aiContextStacker.copyFile",
          "when": "view == aiContextStackerView && viewItem == stagedFile",
          "group": "1_modification"
        },
        {
          "command": "aiContextStacker.removeFile",
          "when": "view == aiContextStackerView && viewItem == stagedFile",
          "group": "2_modification"
        },
        {
          "//": "--- Empty State ---",
          "command": "aiContextStacker.addFilePicker",
          "when": "view == aiContextStackerView && viewItem == emptyState",
          "group": "1_add"
        },
        {
          "command": "aiContextStacker.addOpenFiles",
          "when": "view == aiContextStackerView && viewItem == emptyState",
          "group": "1_add"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiContextStacker.renameTrack",
        "key": "f2",
        "when": "focusedView == aiContextTracksView && !inputFocus"
      },
      {
        "command": "aiContextStacker.deleteTrack",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "focusedView == aiContextTracksView && !inputFocus"
      },
      {
        "command": "aiContextStacker.removeFile",
        "key": "delete",
        "mac": "cmd+backspace",
        "when": "focusedView == aiContextStackerView && !inputFocus"
      },
      {
        "command": "aiContextStacker.copyFile",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "focusedView == aiContextStackerView && !inputFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:spelling": "cspell \"**\"",
    "test": "vscode-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "cspell": "^9.4.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "cspell --no-must-find-files",
      "prettier --write"
    ]
  }
}
